<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.asus.tasklistmanagement">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".login.Login" />
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme" />
        <activity android:name=".login.RegisterActivity" />
        <activity android:name=".login.Dashboard" />
        <activity android:name=".bottomItem.YesterdayActivity" />
        <activity android:name=".bottomItem.TodayActivity" />
        <activity android:name=".addingTask.AddTaskActivity" />
        <activity android:name=".bottomItem.AllTaskActivity" />
        <activity android:name=".bottomItem.TomorrowTaskActivity"></activity>
    </application>

</manifest>